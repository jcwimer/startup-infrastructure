apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  namespace: kube-system
  name: alertmanager
  #annotations:
  #  kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: alertmanager.{{ domain }}
    http:
      paths:
      - backend:
          serviceName: alertmanager
          servicePort: 80
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  namespace: kube-system
  name: prometheus
  #annotations:
  #  kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: prometheus.{{ domain }}
    http:
      paths:
      - backend:
          serviceName: prometheus
          servicePort: 9090

